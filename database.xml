<?xml version="1.0" encoding="UTF-8"?>
<database>

    <projects>

        <table name="tags" no-auto-update="1" no-site-reference="1">
            <field type="varchar( 40 ) NOT NULL PRIMARY KEY">tag</field>
            <field type="text">ptags</field>
            <field type="varchar( 128 ) NOT NULL">title</field>
            <field type="text">desc</field>
            <field type="text">image</field>
            <field type="varchar( 20 )">url</field>
        </table>

        <table name="tags_cache" no-auto-update="1" no-site-reference="1">
            <field type="varchar( 40 ) NOT NULL PRIMARY KEY">tag</field>
            <field type="text">sites</field>
        </table>

        <table name="tags_siteCache" no-auto-update="1" no-site-reference="1">
            <field type="bigint( 20 ) NOT NULL PRIMARY KEY">id</field>
            <field type="varchar( 200 )">name</field>
            <field type="tinytext">title</field>
            <field type="text">tags</field>
            <field type="timestamp">c_date</field>
            <field type="timestamp">e_date</field>
        </table>

        <table name="tags_sites" no-site-reference="1">
            <field type="bigint( 20 ) NOT NULL PRIMARY KEY">id</field>
            <field type="text">tags</field>
        </table>

    </projects>

</database>
