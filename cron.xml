<?xml version="1.0" encoding="UTF-8"?>
<crons>
    <cron exec="\QUI\Tags\Cron::createCache">
        <title>Tag Cache aufbauen</title>
        <description>Beschreibung des Cron</description>
        <!-- available params -->
        <params>
            <param name="project">
                <locale group="" value="" />
            </param>
            <param name="lang">
                <locale group="" value="" />
            </param>
        </params>

        <autocreate>
            <scope>projects</scope>
            <interval>0 0 * * *</interval>
            <active>1</active>

            <params>
                <param name="project">[projectName]</param>
                <param name="lang">[projectLang]</param>
            </params>
        </autocreate>
    </cron>
</crons>
